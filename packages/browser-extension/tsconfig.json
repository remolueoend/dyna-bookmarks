{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "baseUrl": "./src"
  },
  "include": ["./src/**/*"]
}
