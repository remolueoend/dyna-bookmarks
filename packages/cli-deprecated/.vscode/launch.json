  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/index.js",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Single Test",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}",
      "args": ["${relativeFile}"],
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "All Tests",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}",
      "args": ["--runInBand"],
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal"
    }
  ]
}
